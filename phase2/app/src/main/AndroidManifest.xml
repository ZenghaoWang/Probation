<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamacademicprobation.probation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".game.implementations.triviagame.TriviaGameSelectionScreenActivity"
            android:label="@string/title_activity_trivia_game_selection_screen"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamacademicprobation.probation.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.MainActivity" />
        <activity
            android:name=".game.implementations.timinggame.TimingGameActivity"
            android:exported="true" />
        <activity android:name=".ui.ScoreScreenActivity" />
        <activity android:name=".ui.highscores.HighScoresActivity" />
        <activity
            android:name=".game.implementations.triviagame.TriviaGameActivity"
            android:exported="true" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".game.implementations.tappinggame.TapGameActivity"
            android:exported="true" />
    </application>

</manifest>